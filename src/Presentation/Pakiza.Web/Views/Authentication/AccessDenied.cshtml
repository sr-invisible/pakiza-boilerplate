@using Pakiza.Application.DTOs.User
@model LoginDTO
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CRIPTON | PAKIZA - @ViewData["Title"]</title>
    <!-- PWA -->
    <meta name="theme-color" content="#2196f3" />
    <!-- Bootstrap core CSS -->
    <link href="~/Altair/LoginStyle/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Altair/LoginStyle/fonts/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Altair/LoginStyle/css/animate.min.css" rel="stylesheet">
    <!-- Custom styling plus plugins -->
    <link href="~/Altair/LoginStyle/css/custom.css" rel="stylesheet">
    <link href="~/Altair/LoginStyle/css/icheck/flat/green.css" rel="stylesheet">
    <script src="~/Altair/LoginStyle/js/jquery.min.js"></script>
    <style type="text/css">
        #loginBgForm {
            margin-top: 40%;
        }

        .logForm, .logFormD {
            display: none;
        }
    </style>
</head>
<body class="login_page" style="background: #F7F7F7;">
    <div id="wrapper">
        <div id="login" class="animate form col-md-12 col-sm-12 col-xs-12" style="padding: 0px;">
            <section class="col-md-9 col-sm-9 col-xs-12" style="padding: 0px;" id="loginBgImg">
                <img src="~/Altair/Images/login-bg.jpg" width="100%" height="auto" />
            </section>
            <section class="col-md-3 col-sm-3 col-xs-12" style="padding: 0px;">
                <div class="col-md-12 col-sm-12 col-xs-12" id="loginBgForm">
                    <h1 style="text-align:center;"><img id="companyLogoPath" src="~/Altair/Images/Pakiza-Group.png" width="60%" height="auto" /></h1>
                    <h1 style=" margin-bottom:10%; text-align:center;">Access Denied</h1>
                    <p style=" margin-bottom:10%; text-align:center;">You do not have permission to access this resource.</p>
                    <div class="clearfix"></div>

                    <div class="separator" style="position: fixed; bottom:0;width: 100%;">
                        <div class="clearfix"></div>
                        <div>
                            <p style="padding-left:10px;">©
                            <script>document.write(new Date().getFullYear())</script> All Rights Reserved. Pakiza Knit Composite Ltd.</p>
                        </div>
                    </div>

                </div>
            </section>
            <!-- content -->
        </div>
    </div>

    <script src="~/crud/js/adm/account.js"></script>
</body>
</html>



