@{
    ViewData["Title"] = "Menu List";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="md-card md-card-content md-card-warning">
 


    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-medium-1-1 uk-container-center" id="tb_Container"></div>
    </div>
</div>


<div class="md-fab-wrapper">
    <span class="md-fab md-fab-accent" id="note_add" onclick="OpenModal();"><i class="material-icons">add</i> </span>
</div>

<div class="uk-modal" id="pslModal">
    <div class="uk-modal-dialog uk-modal-dialog-scrollable">

        <div class='uk-modal-header'>
            <h3 class='uk-modal-title'> Product Added</h3>
            <button id="closeBtn" onclick="resetModalData();" type='button' title='Close' class='uk-modal-close uk-close uk-float-right' style="margin-top: -25px;"></button>
            <hr class="m-5" />
        </div>
        <div class="modal-body">
            <form class="form" action="#" id="pslModalForm">
                <div class="uk-grid" data-uk-grid-margin>

                    <input type="text" id="id" name="id" class="form-control" hidden />

                    <div class="uk-width-medium-1-2 sr-pb">
                        <label for="Name">Product Name <span class="uk-text-danger"> *</span></label>
                        <input id="name" name="name" type="text"  class="form-control md-input label-fixed formInputs" placeholder="Enter propduct Name..." />
                        <span id="Key-error" class="uk-text-danger error-message"></span>
                    </div>

                    <div class="uk-width-medium-1-2 sr-pb" id="nameSection">
                        <div class="form-group">
                            <label for="Price">Price <span class="uk-text-danger"> *</span></label>
                            <input id="price" name="price" type="number" step="0.01" class="form-control md-input label-fixed formInputs" placeholder="Enter price..." />
                            <span id="Name-error" class="uk-text-danger error-message"></span>
                        </div>
                    </div>



                </div>

                <div class="uk-modal-footer d-flex justify-content-center">
                    <button id="resetBtn" data-form-reset="resetSubmitForm" type="button" class="md-btn md-btn-primary md-btn-sm" style="margin-top: 20px">Reset</button>
                    <button id="addOrUpdateBtn" type="submit" class="md-btn md-btn-success md-btn-sm" style="margin-top: 20px">Save</button>
                  
                </div>
            </form>

        </div>
    </div>
</div>


